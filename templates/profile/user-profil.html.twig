{% extends 'profile/base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block classMain %}
    user-profil
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row bloc-profil">
            <div class="col-12">
                <h2>{{ user.username }}</h2>
                <p>{{ user.email }}</p>
                {% for role in user.roles %}
                    <span>{{ role }} |</span>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}