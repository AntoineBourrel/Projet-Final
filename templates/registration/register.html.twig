{% extends 'front/base.html.twig' %}

{% block title %}
    inscription
{% endblock %}

{% block classMain %}
    register
{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <div class="row bloc-formulaire">
            <div class="col-12">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-register-username-label'}}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-register-username-widget form-control'}}) }}
                {{ form_errors(registrationForm.username) }}
                <br>
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-register-email-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-register-email-widget form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
                <br>
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-register-password-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-register-password-widget form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
                <br>
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
