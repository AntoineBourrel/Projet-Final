<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Admin Board{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('assets/lib/bootstrap/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <nav class="header-desktop">
                <div class="container-fluid">
                    <div class="row header-line">
                        <div class="col-3">
                            <div class="logo-block">
                                <a href="{{ path('admin_home') }}"><img src="{{ asset('assets/img/logo.png') }}" alt="logo" class="logo"></a>
                                <p class="name-site font-weight-bold">Le Bazar Des Mages</p>
                            </div>
                        </div>
                        <div class="col-6 menu-block">
                            <ul class="menu-desktop">
                                <li><a href="{{ path('admin_home') }}">Accueil</a></li>
                                <li><a href="{{ path('admin_user_list') }}">Utilisateurs</a></li>
                                <li><a href="{{ path('admin_offre_choice') }}">Offres</a></li>
                                <li><a href="{{ path('admin_demande_choice') }}">Demandes</a></li>
                                <li><a href="{{ path('admin_article_list') }}">Articles</a></li>
                                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                            </ul>
                        </div>
                        <div class="col-3 flex-row align-items-center">
                            <div class="search-bar">
                                <form class="d-flex" role="search" action="{{ path('admin_search') }}" method="get">
                                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                                    <button class="btn btn-warning" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <nav class="header-mobile">
                <div class="container-fluid">
                    <div class="row header-line-mobile flex-row">
                        <div class="col-12">
                            <div class="logo-block justify-content-center">
                                <img src="{{ asset('assets/img/logo.png') }}" alt="logo" class="logo">
                                <p class="name-site font-weight-bold">Le Bazar Des Mages</p>
                            </div>
                            <div class="col-12 text-center block-icon">
                                <i class="fa-solid fa-bars icons"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 menu-block">
                            <ul class="menu-mobile d-b">
                                <li><a href="{{ path('admin_home') }}">Accueil</a></li>
                                <li><a href="{{ path('admin_user_list') }}">Utilisateur</a></li>
                                <li><a href="{{ path('admin_offre_choice') }}">Offres</a></li>
                                <li><a href="{{ path('admin_demande_choice') }}">Demandes</a></li>
                                <li><a href="{{ path('admin_article_list') }}">Articles</a></li>
                                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="search-bar">
                                <form class="d-flex" role="search" action="{{ path('admin_search') }}" method="get">
                                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                                    <button class="btn btn-success" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>



        <main class="{% block classMain %}{% endblock %}">
            {% for message in app.flashes('success') %}
                <p class="message-success">{{ message }}</p>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <p class="message-error">{{ message }}</p>
            {% endfor %}
            {% block main %}{% endblock %}
        </main>

        <footer>
            <div class="container-fluid">
                <div class="row">
                    <div class=" col-12 col-lg-4">
                        <div class="logo-footer flex-row">
                            <img src="{{ asset('assets/img/logo.png') }}" alt="logo footer">
                            <p class="name-site-footer">Le Bazar Des Mages</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-5">
                        <div class="contact-block">
                            <h4>Contact</h4>
                            <p>Adresse : 3 Allée Pierre Dac</p>
                            <p>Ville : 33170 Gradignan</p>
                            <p>Email : xxxxx.xxxxx@gmail.com</p>
                            <a href="https://discord.gg/3ZPxEaTU"><i class="fa-brands fa-discord"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script src="https://kit.fontawesome.com/fbf865611e.js" crossorigin="anonymous"></script>
        <script src="{{ asset('assets/lib/bootstrap/js/bootstrap.js') }}"></script>
        <script src="{{ asset('assets/js/main.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
