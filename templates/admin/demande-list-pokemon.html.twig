{% extends 'admin/base.html.twig' %}


{% block title %}
    Liste d'offres Pokemon
{% endblock %}

{% block main %}
    <div class="container">
    <div class="row">
        <div class="col-12">
            <a href="{{ path('admin_demande_insert') }}" class="btn bg-warning">Cr√©er une nouvelle offre</a>
        </div>
    </div>
    {% for demande in demandes %}
        <div class="row offre-line">
            <div class="col-12">
                <a href="{{ path('admin_demande_show', {'id' :demande.id }) }}">{{ demande.title }} | {{ demande.game }} | {{ demande.edition}} | {{ demande.publishedAt | date('d-m-y') }}</a>
                <a href="{{ path('admin_demande_update', {'id' : demande.id }) }}" class="btn bg-warning">Modifier</a>
                <a href="{{ path('admin_demande_delete', {'id' : demande.id }) }}" class="btn bg-warning">Supprimer</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}